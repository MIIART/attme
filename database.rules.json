{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "members": {
      "$id": {
      			".indexOn": ["memberId"]
      }
    },
    "events": {
      "$id": {
        		".indexOn": ["when"],
              "when": {
          ".validate": "newData.isString() && newData.val().matches(/^(19|20)[0-9][0-9][-\\/. ](0[1-9]|1[012])[-\\/. ](0[1-9]|[12][0-9]|3[01])$/)"
        }
      }
    }      
  }
}